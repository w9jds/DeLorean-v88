{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix ./functions run lint",
      "npm --prefix ./functions run build"
    ]
  },
  "hosting": {
    "public": "build",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }],
    "headers": [{
      "source": "service-worker.js",
      "headers": [{
        "key": "Cache-Control",
        "value": "no-store"
      }]
    }]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
